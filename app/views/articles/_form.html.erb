<% if @article.errors.any? %>
<h2>The following errors preventend the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg|  %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>


<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-5"> <!-- Puedes ajustar a col-md-6 o 5 si quieres mÃ¡s estrecho -->
      
      <%= form_for(@article, html: { class: "border p-4 rounded shadow-sm bg-light" }) do |f| %>
        
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
        
        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of the article" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Create Article", class: "btn btn-primary btn-lg" %>
        </div>

      <% end %>

      <div class="text-center mt-3">
        [<%= link_to 'Cancel request and return to articles listing', articles_path, class: "btn btn-link" %>]
      </div>

    </div>
  </div>
</div>




