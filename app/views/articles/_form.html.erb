<%= render "shared/errors", obj: @article %>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6"> <!-- Puedes ajustar a col-md-6 o 5 si quieres mÃ¡s estrecho -->
      
      <%= form_for(@article, html: { class: "border p-4 rounded shadow-sm bg-light" }) do |f| %>
        
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
        
        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of the article" %>
        </div>
        <div class="d-flex flex-wrap gap-3">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <div class="form-check">
              <%= cb.checkbox(class: "form-check-input") %>
              <%= cb.label(class: "form-check-label") %>
            </div>
          <% end %>
        </div>
        <div class="d-grid gap-2 mt-4">
          <%= f.submit @article.persisted? ? "Update Article" : "Create Article", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        [<%= link_to 'Cancel request and return to articles listing', articles_path, class: "btn btn-link" %>]
      </div>

    </div>
  </div>
</div>




