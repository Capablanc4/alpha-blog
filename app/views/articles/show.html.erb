
<div class="container mt-4">
  <h2 class="text-center mb-4 text-dark">
    Title: <%= @article.title %>
  </h2>
  <div class="card shadow-sm bg-light text-dark">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mx-auto text-center">
          <h3>Created by:</h2>
          <%= gravatar_for(@article.user, size: 150) %><br>
          <%= link_to "#{@article.user.username}", user_path(@article.user), class: "mt-4"%>
        </div>
      </div>
      <h4 class="text-center description mt-3"><strong>Description:</strong></h4>
      <hr class="border-light">
      <p><%= simple_format(@article.description) %></p>
      <% if @article.categories.any? %>
        <p>
          Categories : <%= render @article.categories %>
        </p>
      <% end %>
      <div class="d-flex justify-content-left gap-2 mt-4 article-actions">
        <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
          <%= link_to 'Edit article', edit_article_path(@article), class: "btn btn-primary" %>
          <%= link_to 'Delete this article', article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete the article?" }, class: "btn btn-danger" %>
        <% end%>  
        <%= link_to 'View all articles', articles_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>