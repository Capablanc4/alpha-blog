<h1>Listing All Categories</h1>
<div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy)if @pagy.pages > 1 %>
</div>
<div align = "center">
    <% @categories.each do |category| %>
    <ul class="list-unstyled">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <li class="fs-5">
                            <%= link_to "#{category.name}", category_path(category), class: "text-decoration-none" %>
                        </li>
                        <% if logged_in? and current_user.admin?  %>
                            <div class="d-flex justify-content-center gap-2 mt-3">
                            <%= link_to 'Edit category', edit_category_path(category), class: "btn btn-primary btn-sm glow-hover" %>
                            <%= link_to 'Delete this category', category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete the user?" }, class: "btn btn-danger btn-sm glow-hover" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </ul>
    <% end %>

</div>