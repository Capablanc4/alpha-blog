
<br>
<h1 align= "center">Signup for Alpha Blog</h1>
<%= render "shared/errors", obj: @user %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-5">
      
      <%= form_with model: @user, local: true,  html: { class: "border p-4 rounded shadow-sm bg-light" } do |f| %>
        
        <div class="mb-3">
          <%= f.label :username, class: "form-label" %>
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
        
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit 'Sign up', class: "btn btn-primary btn-lg" %>
        </div>

      <% end %>

      <div class="text-center mt-3">
        [<%# link_to 'Are u not register?', register_path, class: "btn btn-link" %>]
      </div>

    </div>
  </div>
</div>




