<% obj.each do |user| %>
  <div class="row justify-content-center mb-4">
    <div class="col-md-8">
      <div class="card shadow-sm bg-light text-dark">
        <div class="card-body text-center">
          <h4 class="article-title mb-3">
            <%= link_to gravatar_for(user, size: 150), user_path(user), class: "d-block mb-3 mx-auto" %>
          </h4>
          <ul class="text-center mx-auto">
            <li>
              <%= link_to user.username, user_path(user), class: "text-decoration-none text-primary" %>
            </li>
            <li class= "text-muted mb-1">  
            <strong>Email:</strong>
            <%= user.email%>    
            </li>
            <li , class= "text-muted mb-1">
              <strong>Creation date:</strong> 
              <%= user.created_at.strftime("%d/%m/%Y")%>
            </li>
            <li class= "mb-2">
              <%= pluralize(user.articles.count, "article")%> 
            </li>
          </ul>
          <div class="d-flex justify-content-center gap-2 mt-3">
            <%= link_to 'Edit user', edit_user_path(user), class: "btn btn-primary btn-sm glow-hover" %>
            <%= link_to 'Delete this user', user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user?" }, class: "btn btn-danger btn-sm glow-hover" %>
          </div>
        </div>
      </div>
    </div>
  </div>  
<% end %>